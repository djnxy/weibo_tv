<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="81dp"
        android:layout_height="31dp"
        android:id="@+id/tucao_button"
        android:adjustViewBounds="true"
        android:background="@drawable/tucao_button"
        android:layout_margin="5dp"
        android:onClick="onTucaoButtonClick" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:id="@+id/show_selector"
        android:layout_marginLeft="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="81dp"
        android:layout_height="31dp"
        android:id="@+id/tucao_change_button"
        android:background="@drawable/button"
        android:adjustViewBounds="true"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:onClick="onTucaoChangeTV" />

    <ListView
        android:id="@+id/tucao_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tucao_button" />

</RelativeLayout>