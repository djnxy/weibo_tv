<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FF333333">


    <Button
        android:layout_width="81dp"
        android:layout_height="31dp"
        android:text="back"
        android:id="@+id/back_tucao"
        android:onClick="backFromReviewTucao"
        android:layout_margin="5dp"
        android:background="#FFFFFF"
        android:textSize="@dimen/abc_text_size_button_material" />

    <ImageButton
        android:layout_width="81dp"
        android:layout_height="31dp"
        android:id="@+id/tucao_button_review"
        android:adjustViewBounds="true"
        android:background="@drawable/tucao_button"
        android:layout_margin="5dp"
        android:onClick="tucaoReviewButton"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_tucao"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true">

    </RelativeLayout>

    <Button
        android:layout_width="81dp"
        android:layout_height="31dp"
        android:text="播放"
        android:id="@+id/tucao_play_voice"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tucao_button_review"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:textColor="#f73739"
        android:layout_margin="5dp"
        android:textSize="@dimen/abc_text_size_button_material" />


</RelativeLayout>